<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Input Nama"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        android:textColor="@android:color/black" />

    <!-- Nama Input -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama:"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editTextNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan nama Anda"
        android:layout_marginBottom="16dp"
        android:inputType="textPersonName" />

    <!-- NPM Input -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NPM:"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editTextNPM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan NPM Anda"
        android:layout_marginBottom="16dp"
        android:inputType="number" />

    <!-- Program Studi Input -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Program Studi:"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editTextProgramStudi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Program Studi Anda"
        android:layout_marginBottom="16dp"
        android:inputType="text" />

    <!-- Fakultas Input -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fakultas:"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editTextFakultas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Fakultas Anda"
        android:layout_marginBottom="24dp"
        android:inputType="text" />

    <!-- Simpan Button -->
    <Button
        android:id="@+id/buttonSimpan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simpan"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@android:color/holo_blue_dark" />

    <!-- Result TextView -->
    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:padding="16dp"
        android:background="@android:color/white"
        android:visibility="gone" />

</LinearLayout>